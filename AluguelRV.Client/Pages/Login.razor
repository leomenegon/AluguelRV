@page "/login"
@inject UserService _userService

<h3>Login</h3>

<EditForm Model="loginRequest" OnSubmit="LoginButton">
    <label for="username">Name</label>
    <InputText id="username" @bind-Value="loginRequest.Username" />
    <label for="password">Password</label>
    <InputText id="password" @bind-Value="loginRequest.Password" type="password" />
    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@code {
    LoginRequestDto loginRequest = new LoginRequestDto();

    async Task LoginButton() => await _userService.HandleLogin(loginRequest);
}